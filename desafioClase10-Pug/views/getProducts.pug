doctype html
head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title=title
    link(href='style.css' rel='stylesheet' type='text/css')
table
    tr
        th(colspan='3')
            h1 Vista de Productos
    tr
        th Nombre
        th Precio
        th Foto
    if listExists
        each prod in products
            tr
                td=prod.title
                td=prod.price
                td
                    img(src=prod.thumbnail)
    else
        tr
            td(colspan='3') No hay productos
hr
form(method='get' action='/')
    button(type='submit') Ingresar Productos